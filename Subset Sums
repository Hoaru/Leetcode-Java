/*题目描述

Find subset of elements that are selected from a given set 
of positive integers whose sum adds up to a given number K.

输入:
A Set of Distinct Integers and target K    

输出:
List of List of Integers. The order is based on the number, Smaller number first.
*/

import java.util.*;

public class Main {

    public static void helper(int[] nums, int target, ArrayList<List<Integer>> res, ArrayList<Integer> cur, int index){
        if(target == 0) {
            res.add(cur);
            return;
        }
        else if(target < 0 || index > nums.length - 1) return;
        else{
            cur.add(nums[index]);
            helper(nums, target - nums[index], res, new ArrayList<>(cur), index +  1);
            cur.remove(cur.size() - 1);
            helper(nums, target, res, new ArrayList<>(cur), index + 1);
        }
    }

    public static List<List<Integer>> subsetSums(int[] nums, int target) {
        ArrayList<List<Integer>> res = new ArrayList<>();
        ArrayList<Integer> cur = new ArrayList<>();
        if(nums.length == 0 || target == 0) return res;
        helper(nums, target, res, cur, 0);
        return res;
    }

    public static void main(String[] args)
    {
        int[] nums = {1, 2, 3, 4, 5, 6, 7};
        System.out.println(subsetSums(nums, 12));
        System.exit(0);
        //System.out.println();
    }
}
