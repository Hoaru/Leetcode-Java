import java.util.*;
public class Main {

    public static int[] solve(int numberOfPorts, int transmissionTime, int[] packetIds) {
        HashMap<Integer, ArrayList<Integer>> map = new HashMap<>();
        int finalAriving = packetIds.length;
        int[] res = new int[finalAriving];
        for (int i = 0; i < numberOfPorts; i++) {
            map.put(i, new ArrayList<>());
            map.get(i).add(0);
        }
        for (int i = 1; i <= finalAriving; i++) {
            int hashPortId = packetIds[i - 1] % numberOfPorts;
            while (map.get(hashPortId).get(0) >= i) {
                hashPortId = (hashPortId + 1) % numberOfPorts;
            }
            res[i - 1] = hashPortId;
            ArrayList<Integer> timeTable = map.get(hashPortId);
            for (int j = i; j < i + transmissionTime; j++) {
                timeTable.add(0, j);
            }
        }
        return res;
    }


    public static void main(String[] args) {
        int[] nums1 = new int[]{4,7,10,6};
        int[] res = solve(3, 2, nums1);
        for (int i : res) {
            System.out.println(i);
        }
    }
}
